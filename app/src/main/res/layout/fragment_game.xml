<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.GameFragment"
    android:background="@drawable/question2"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cardDetailsGameFragment"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@drawable/diamonds"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:id="@+id/diamondsGameFragmentsTview"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:textColor="#ffff"
            android:fontFamily="@font/suezone"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:id="@+id/levelGameFragmentsTview"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:textColor="#ffff"
            android:fontFamily="@font/suezone"
            android:textStyle="bold"
         />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:id="@+id/scoreGameFragmentsTview"
            android:textSize="20sp"
            android:textColor="#ffff"
            android:layout_margin="5dp"
            android:fontFamily="@font/suezone"
            android:textStyle="bold"
            />

    </LinearLayout>
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/timerProgressBarGameFragment"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="60"
        android:progressDrawable="@drawable/progressbar_design"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardDetailsGameFragment"
        app:layout_constraintBottom_toTopOf="@+id/questionGameFragment"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addedScoreTviewGameFragment"
        android:textSize="50sp"
        android:textColor="#03A9F4"
        android:fontFamily="@font/varelaround"
        android:alpha="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardDetailsGameFragment"
        app:layout_constraintBottom_toTopOf="@+id/questionGameFragment"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/questionGameFragment"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30sp"
            android:fontFamily="@font/bellefair"
            android:layout_margin="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardDetailsGameFragment"
            app:layout_constraintBottom_toTopOf="@+id/answerContainerGameFragment"/>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:id="@+id/answerContainerGameFragment"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="50dp">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="5dp"
        >
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/yesAnswerBtnGameFragment"
        android:background="#4CAF50"
        android:text="true"
        />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/noAnswerBtnGameFragment"
            android:background="#F44336"
            android:text="false"
            />
    </androidx.cardview.widget.CardView>


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>